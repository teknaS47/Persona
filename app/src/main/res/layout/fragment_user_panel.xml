<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserPanelFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AA3B60"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/user_info_header">



            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:paddingLeft="10dp"
                app:srcCompat="@drawable/ic_account_circle_white_50dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#fffffF"
                    android:textSize="13dp"
                    android:id="@+id/user_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/colorGrey"
                    android:textSize="13dp"
                    android:id="@+id/user_email"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/colorGrey"
                    android:textSize="13dp"
                    android:id="@+id/user_mobile"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_edit_black_24dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"
            >
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/award2018"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingLeft="20dp"
                android:text="Awards 2018"
                android:textSize="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="left|center_vertical">
            </TextView>
        </android.support.v7.widget.CardView>



        <LinearLayout
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/colorGrey"
            >
        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bulkregi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingLeft="20dp"
                android:text="Bulk Registration"
                android:textSize="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="left|center_vertical">
            </TextView>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"
            >
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aboutdevelopercard">
            <TextView
                android:id="@+id/aboutdevelopers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingLeft="20dp"
                android:text="About Developers"
                android:textSize="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="left|center_vertical">
            </TextView>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/colorGrey"
            >
        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/addvolunteer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingLeft="20dp"
                android:text="Add Volunteer"
                android:textSize="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="left|center_vertical"
                android:visibility="gone">
            </TextView>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/colorGrey"
            >
        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/signOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Sign Out"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="left|center_vertical"/>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey">
        </LinearLayout>


    </LinearLayout>


</FrameLayout>