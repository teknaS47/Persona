<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="vertical"
tools:context=".techFragment">

<!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView_electronics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/management_cards"
                android:hapticFeedbackEnabled="true"
                android:padding="5dp"
                android:text="Electronics"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:typeface="monospace" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/electronics_Cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_electronics"
                app:layout_constraintBottom_toBottomOf="@id/textView_electronics"></android.support.v7.widget.RecyclerView>


            <TextView
                android:id="@+id/textView_civilEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/electronics_Cards"
                android:hapticFeedbackEnabled="true"
                android:padding="5dp"
                android:text="Civil Events"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:typeface="monospace" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/civil_Cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_civilEvents"
                app:layout_constraintBottom_toBottomOf="@id/textView_civilEvents"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/textView_MechanicalEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/civil_Cards"
                android:hapticFeedbackEnabled="true"
                android:padding="5dp"
                android:text="Mechanical Events"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:typeface="monospace" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mechanical_Cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_MechanicalEvents"
                app:layout_constraintBottom_toBottomOf="@id/textView_MechanicalEvents"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/textView_aerospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mechanical_Cards"
                android:hapticFeedbackEnabled="true"
                android:padding="5dp"
                android:text="Aerospace Events"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:typeface="monospace" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/aerospace_Cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_aerospace"
                app:layout_constraintBottom_toBottomOf="@id/textView_aerospace"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/textView_cse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aerospace_Cards"
                android:hapticFeedbackEnabled="true"
                android:padding="5dp"
                android:text="Computer &amp; Science Events"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:typeface="monospace" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cse_Cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_cse"
                app:layout_constraintBottom_toBottomOf="@id/textView_cse"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/textView_foodTechEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cse_Cards"
                android:hapticFeedbackEnabled="true"
                android:padding="5dp"
                android:text="Food Tech Events"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:typeface="monospace" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/foodTech_Cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_foodTechEvents"
                app:layout_constraintBottom_toBottomOf="@id/textView_foodTechEvents"></android.support.v7.widget.RecyclerView>


        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>